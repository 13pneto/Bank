@model Domain.Pessoa

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar</h2>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <span asp-validation-for="Tipo" class="text-danger"></span>

                <select asp-for="Tipo" class="form-group">
                    <option class="dropdown-item" value="C">Cliente</option>
                    <option value="F">Funcionario</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <span asp-validation-for="Sexo" class="text-danger"></span>

                <select asp-for="Sexo" class="form-group">
                    <option class="dropdown-item" value="M">Masculino</option>
                    <option value="F">Feminino</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir para listagem</a>
</div>

